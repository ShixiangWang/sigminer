citHeader("To cite sigminer in publications use:")

citEntry(
  entry    = "Article",
  title    = "Copy number signature analysis tool and its application in prostate cancer reveals distinct mutational processes and clinical outcomes",
  author   = personList(as.person("Shixiang Wang"),
                       as.person("Huimin Li"),
                       as.person("Minfang Song"),
                       as.person("Zaoke He"),
                       as.person("Tao Wu"),
                       as.person("Xuan Wang"),
                       as.person("Ziyu Tao"),
                       as.person("Kai Wu"),
                       as.person("Xue-Song Liu")
                       ),
  journal  = "Plos Genetics",
  year     = 2021,
  volume   = 17,
  number   = 5,
  pages    = "e1009557",
  url      = "https://doi.org/10.1371/journal.pgen.1009557",
  textVersion = paste(
    "Wang S, Li H, Song M, Tao Z, Wu T, He Z, et al. (2021) Copy",
    "number signature analysis tool and its application in prostate",
    "cancer reveals distinct mutational processes and clinical outcomes.",
    "PLoS Genet 17(5): e1009557.",
    "https://doi.org/10.1371/journal.pgen.1009557"
  )
)
